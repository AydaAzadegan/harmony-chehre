<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= pageTitle || 'کلینیک هارمونی چهره' %></title>
  <% if (typeof metaDescription !== 'undefined' && metaDescription) { %>
    <meta name="description" content="<%- metaDescription %>">
  <% } %>
  <link rel="stylesheet" href="/css/styles.css?v=<%= Date.now() %>">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container">
    <%- body %>
  </main>

  <%- include('partials/footer') %>

  <!-- Existing site chat (if you use it) -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js?v=<%= Date.now() %>"></script>

  <!-- Chatbot trigger -->
  <button id="bot-toggle" aria-label="چت‌بات"
    style="position:fixed; bottom:16px; right:16px; z-index:2147483647;
           border:none; border-radius:999px; padding:12px 16px;
           background:#708238; color:#fff; box-shadow:0 10px 20px rgba(0,0,0,.15); cursor:pointer;">
    چت‌بات
  </button>

  <!-- Chatbot panel -->
  <div id="bot-panel" dir="rtl"
      style="position:fixed; bottom:80px; right:16px; z-index:2147483646; width:340px; max-width:92vw;
             background:#fff; border:1px solid var(--border); border-radius:14px; display:none;
             box-shadow:0 24px 48px rgba(0,0,0,.18); overflow:hidden;">
    <div style="background:#F4F7F0; padding:10px 12px; display:flex; justify-content:space-between; align-items:center;">
      <strong>دستیار هارمونی چهره</strong>
      <button id="bot-close" aria-label="بستن" style="border:none; background:transparent; font-size:18px; cursor:pointer;">×</button>
    </div>
    <div id="bot-log" style="height:280px; overflow:auto; padding:10px;"></div>
    <form id="bot-form" style="display:flex; gap:6px; padding:10px; border-top:1px solid var(--border);">
      <input id="bot-input" placeholder="سؤال خود را بنویسید…" autocomplete="off"
            style="flex:1; border:1px solid var(--border); border-radius:8px; padding:8px;">
      <button class="btn" type="submit">ارسال</button>
    </form>
  </div>

  <!-- Chatbot JS -->
  <script src="/js/bot.js?v=<%= Date.now() %>"></script>
  <script>console.log('LAYOUT ACTIVE');</script>
</body>
</html>
