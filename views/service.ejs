<% layout('layout') %>

<!-- Service Breadcrumb -->
<section class="section" dir="rtl">
  <nav aria-label="Breadcrumb" style="font-size:14px; color:var(--muted); margin-bottom:12px;">
    <a href="/" class="link">خانه</a>
    <span aria-hidden="true"> › </span>
    <a href="/#services" class="link">خدمات</a>
    <span aria-hidden="true"> › </span>
    <span><%= service.title %></span>
  </nav>

  <!-- Hero / Header -->
  <header class="card" style="display:grid; gap:16px;">
    <div>
      <h1 style="margin:0 0 6px;"><%= service.title %></h1>
      <% if (typeof metaDescription !== 'undefined' && metaDescription) { %>
        <p style="color:var(--muted); margin:0;"><%= metaDescription %></p>
      <% } %>
    </div>

    <% if (service.cover) { %>
      <img
        src="<%= service.cover %>"
        alt="<%= service.title %>"
        style="width:100%; border-radius:12px; object-fit:cover; max-height:360px;"
        loading="lazy"
      >
    <% } %>

    <!-- CTAs -->
    <div style="display:flex; gap:8px; flex-wrap:wrap">
      <a href="tel:+989150739223" class="btn" aria-label="تماس تلفنی با کلینیک">تماس تلفنی</a>
    </div>
  </header>
</section>

<!-- Main Content -->
<section class="section" dir="rtl">
  <article class="card">
    <div style="line-height:2; color:#2c3328;">
      <%- details.body %>
    </div>
  </article>
</section>

<!-- FAQs -->
<% if (details.faqs && details.faqs.length) { %>
<section class="section" dir="rtl">
  <h2 style="margin-bottom:12px;">سؤالات متداول</h2>
  <div class="cards">
    <% details.faqs.forEach(f => { %>
      <details class="card" style="padding:14px;">
        <summary style="cursor:pointer; font-weight:700; outline:none;">
          <span><%= f.q %></span>
        </summary>
        <p style="margin-top:8px; color:var(--muted); line-height:2;"><%= f.a %></p>
      </details>
    <% }) %>
  </div>
</section>
<% } %>

<!-- JSON-LD for FAQ (SEO) -->
<% if (faqLd) { %>
  <script type="application/ld+json"><%- JSON.stringify(faqLd) %></script>
<% } %>




